                    <ComboBoxItem Content="Szerző"/>
                    <ComboBoxItem Content="Cím"/>
                    <ComboBoxItem Content="Kiadási év"/>
                    <ComboBoxItem Content="Kiadó"/>
                </ComboBox>
                <DataGrid  Margin="10,0,0,0" Grid.Column="0" Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="ID" Width="20*" MaxWidth="50"/>
                        <DataGridCheckBoxColumn Header="Kölcsönözhető" Width="20*" MaxWidth="100"/>
                        <DataGridTextColumn Header="Szerző" Width="20*"/>
                        <DataGridTextColumn Header="Cím" Width="20*"/>
                        <DataGridTextColumn Header="Kiadási év" Width="20*"/>
                        <DataGridTextColumn Header="Kiadó" Width="20*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Label Content="Adatok módosítása:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="1" FontSize="18" VerticalContentAlignment="Center"/>
